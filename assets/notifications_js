function isiOS4Plus(){if("iPhone OS"==Ti.Platform.name){var e=Ti.Platform.version.split("."),t=parseInt(e[0]);if(t>=4)return!0}return!1}if(isiOS4Plus()){var service;Ti.App.addEventListener("resume",function(){Ti.API.info("app is resuming from the background")}),Ti.App.addEventListener("resumed",function(){Ti.API.info("app has resumed from the background"),null!=service&&(service.stop(),service.unregister()),Ti.UI.iPhone.appBadge=null}),Ti.App.addEventListener("pause",function(){Ti.API.info("app was paused from the foreground"),service=Ti.App.iOS.registerBackgroundService({url:"bg.js"}),Ti.API.info("registered background service = "+service)})}