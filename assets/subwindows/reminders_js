Ti.include("../functions.js");var win=Ti.UI.currentWindow;designWindow(win,"Reminders",Ti.App.userbg,!0),createTabGroup(win,0);var calendarView=Ti.UI.createView({width:253,height:253,backgroundImage:root+"/images/reminders/reminder.png",top:60});win.add(calendarView);var appointmentButton=Ti.UI.createButton({width:248,height:49,backgroundImage:root+"/images/reminders/enterappointment-button.png",top:300*heightRatio});win.add(appointmentButton);var medicationButton=Ti.UI.createButton({width:248,height:50,backgroundImage:root+"/images/reminders/entermedication-button.png",top:351*heightRatio});win.add(medicationButton),appointmentButton.addEventListener("click",function(){winapp=Ti.UI.createWindow({url:root+"/subwindows/appointments.js"}),Ti.UI.currentTab.open(winapp)}),medicationButton.addEventListener("click",function(){winmed=Ti.UI.createWindow({url:root+"/subwindows/medications.js"}),Ti.UI.currentTab.open(winmed)});